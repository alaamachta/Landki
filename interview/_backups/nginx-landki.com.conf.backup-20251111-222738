# ======================================================================
# Landki.com Configuration (HTTPS + Interview App + API)
# Updated: ${TS}
# ======================================================================

server {
    listen 80;
    listen [::]:80;
    server_name landki.com www.landki.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name landki.com www.landki.com;

    ssl_certificate /etc/letsencrypt/live/landki.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/landki.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /var/www/landki/website;
    index index.html index.htm;
    access_log /var/log/nginx/landki.com.access.log;
    error_log  /var/log/nginx/landki.com.error.log;

    # Redirect /interview (no trailing slash) â†’ canonical
    location = /interview { return 301 https://$host/interview/; }

    # ================== Interview API Proxy ==================
    location /interview/api/ {
        proxy_pass http://127.0.0.1:3001/api/;
        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding on;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Root /api for absolute calls
    location /api/ {
        proxy_pass http://127.0.0.1:3001/api/;
        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_buffering off;
        proxy_cache off;
        chunked_transfer_encoding on;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # ================== Interview App (static pages from /static) ======
    # Exact /interview/ -> /var/www/landki/interview/static/index.html
    location = /interview/ {
        root /var/www/landki/interview;  # final path: /var/www/landki/interview/static/index.html
        try_files /static/index.html =404;
        default_type text/html;
        add_header Cache-Control "no-cache";
    }

    # Exact /interview/dashboard -> dashboard.html
    location = /interview/dashboard {
        root /var/www/landki/interview;
        try_files /static/dashboard.html =404;
        default_type text/html;
        add_header Cache-Control "no-cache";
    }

    # Assets under /interview/static/*
    location ^~ /interview/static/ {
        alias /var/www/landki/interview/static/;
        access_log off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # Absolute /static/* (used by HTML)
    location ^~ /static/ {
        alias /var/www/landki/interview/static/;
        access_log off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # ================== Widget (static) ==================
    location /widget/ {
        alias /var/www/landki/website/widget/dist/;
        expires 7d;
        add_header Cache-Control "public, max-age=604800, immutable";
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, OPTIONS";
    }

    # ================== Main Website ==================
    location / {
        try_files $uri $uri/ =404;
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff2?)$ {
            expires 7d;
            add_header Cache-Control "public";
        }
    }

    # Security
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    location ~ /\.[^/]+ { deny all; access_log off; log_not_found off; }
}
